{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "excelscanner/*.csproj",
            "PluginContracts/*.csproj"
          ],
          "cwd": ".",
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ],
          "src": ".."
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/**.md",
          "articles/**.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }

    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "Excel Batch Processor",
      "_appFooter": "Copyright © 2018 Dan Liberatori",
    },
    "template": [
      "default"
    ]
  }
}